{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "disableSizeLimit": true,
    "typeRoots": ["./node_modules/@types"],
    "disableSourceOfProjectReferenceRedirect": true,
    "noErrorTruncation": true,
    "noEmitOnError": false
  },
  "exclude": [
    "node_modules",
    "mock-output",
    "packages/frontend",
    "packages/shared"
  ]
}
